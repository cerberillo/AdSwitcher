<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:AdSwitcher">

    <!-- Default style for CompletIT.Windows.Controls.LinkLabel -->
    <Style TargetType="local:AdSwitcher">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:AdSwitcher">
                    <Grid x:Name="LayoutRoot"
                          Background="Black">
                        <Grid x:Name="DefaultBannerContainer"
                              Background="Yellow">
                            <TextBlock>DEFAULT BANNER CONTAINER</TextBlock>
                        </Grid>
                        <Grid x:Name="RotatingAdContainer"
                              Background="Red">
                            <TextBlock>ROTATING AD CONTAINER</TextBlock>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>